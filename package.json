{
    "name": "tassadraft-v2",
    "private": false,
    "version": "2.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
        "preinstall": "node install.js",
        "format": "npx prettier --write .",
        "build:mobile:base": "npm run build && npx capacitor-assets generate",
        "build:android:base": "npm run build:mobile:base && npx cap copy android && npx cap sync android",
        "build:android:debug": " npm run build:android:base && cd android && ./gradlew assembleDebug",
        "build:android": " npm run build:android:base && cd android && ./gradlew assembleRelease"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.19.0"
    },
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@tsconfig/svelte": "^5.0.4",
        "@types/node": "^20.14.10",
        "autoprefixer": "^10.4.19",
        "postcss": "^8.4.39",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.2.6",
        "svelte": "^4.2.18",
        "svelte-check": "^3.8.1",
        "tailwindcss": "^3.4.4",
        "tslib": "^2.6.3",
        "typescript": "^5.2.2",
        "vite": "^5.3.1"
    },
    "dependencies": {
        "@capacitor/android": "^6.1.0",
        "@capacitor/camera": "^6.0.2",
        "@capacitor/core": "^6.1.2",
        "@capacitor/geolocation": "^6.0.0",
        "@capacitor/ios": "^6.1.0",
        "@ionic/pwa-elements": "^3.3.0",
        "@sveltejs/adapter-auto": "^3.2.2",
        "axios": "^1.7.7",
        "dotenv": "^16.4.5",
        "jspdf": "^2.5.2",
        "svelte-i18n": "^4.0.1",
        "svelte-meta-tags": "^3.1.4",
        "svelte-preprocess": "^6.0.2",
        "svelte-routing": "^2.13.0",
        "three": "^0.171.0",
        "toastify-js": "^1.12.0",
        "vanta": "^0.5.24",
        "vite-plugin-env-compatible": "^2.0.1"
    }
}
